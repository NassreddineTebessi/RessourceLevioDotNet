@model WEB.Models.RessourceModel

@{
    ViewBag.Title = "createRessource";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

  <!-- Begin Page Header-->
<div class="row">
    <div class="page-header">
        <div class="d-flex align-items-center">
            <h2 class="page-header-title">Forms Validation</h2>
            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="db-default.html"><i class="ti ti-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="#">Ressources</a></li>
                    <li class="breadcrumb-item active">Add ressource</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Header -->
<div class="row flex-row">
    <div class="col-xl-12">
        <!-- Form -->
        <div class="widget has-shadow">
            <div class="widget-header bordered no-actions d-flex align-items-center">
                <h4>Default Form</h4>
            </div>
            <div class="widget-body">
                <form class="needs-validation" method="post" action="/Ressource/createRessource" novalidate>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">First Name *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="first_name" placeholder="Entrer first name" required>
                            <div class="invalid-feedback">
                                Please enter a valid first name
                            </div>
                        </div>
                    </div>

                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Last Name *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="last_name" placeholder="Entrer last name" required>
                            <div class="invalid-feedback">
                                Please enter a valid last name
                            </div>
                        </div>
                    </div>

                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Profile *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="profile" placeholder="Entrer profile" required>
                            <div class="invalid-feedback">
                                Please enter a valid profile
                            </div>
                        </div>
                    </div>

                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Email Address *</label>
                        <div class="col-lg-5">
                            <div class="input-group">
                                <input type="email" class="form-control" name="email" placeholder="Enter email" required>
                                <span class="input-group-addon addon-orange">.com</span>
                                <div class="invalid-feedback">
                                    Please enter a valid email
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Password *</label>
                        <div class="col-lg-5">
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                            <div class="invalid-feedback">
                                Please enter a valid password
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Sector *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="sector" placeholder="Entrer sector" required>
                            <div class="invalid-feedback">
                                Please enter a valid sector
                            </div>
                        </div>
                    </div>

                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Contract Type *</label>
                        <div class="col-lg-5">
                            <div class="select">
                                <select name="contract_type" class="custom-select form-control" required>
                                    <option value="">Select an option</option>
                                    <option>employee</option>
                                    <option>freelance</option>s
                                </select>
                                <div class="invalid-feedback">
                                    Please select a contract
                                </div>
                            </div>
                        </div>
                    </div>      
                    
                          
                   
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Custom Message</label>
                        <div class="col-lg-5">
                            <textarea class="form-control" name="note" placeholder="Type your message here ..." required></textarea>
                            <div class="invalid-feedback">
                                Please enter a custom message
                            </div>
                        </div>
                    </div>
                                   
                    <div class="text-right">
                        <input type="submit" value="Create" class="btn btn-gradient-01"/>
                    </div>
                </form>
            </div>
        </div>
        <!-- End Form -->
    </div>
</div>
<!-- End Row -->
<!-- End Container -->