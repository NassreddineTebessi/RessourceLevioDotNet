@model WEB.Models.ClientModel

@{
    ViewBag.Title = "EditClient";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Begin Page Header-->
<div class="row">
    <div class="page-header">
        <div class="d-flex align-items-center">
            <h2 class="page-header-title">Forms Validation</h2>
            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="db-default.html"><i class="ti ti-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="#">Client</a></li>
                    <li class="breadcrumb-item active">Edit Client</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Header -->
<div class="row flex-row">
    <div class="col-xl-12">
        <!-- Form -->
        <div class="widget has-shadow">
            <div class="widget-header bordered no-actions d-flex align-items-center">
                <h4>Default Form</h4>
            </div>
            <div class="widget-body">
                <form class="needs-validation" method="post" action="/Client/UpdateClient" novalidate>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <div class="col-lg-5">
                            <input hidden type="text" class="form-control" name="idClient" value="@ViewBag.result.id">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Client name *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" value="@ViewBag.result.name" name="name" placeholder="Entrer name" required>
                            <div class="invalid-feedback">
                                Please enter a valid  name
                            </div>
                        </div>
                    </div>

                    <div class="text-right">
                        <input type="submit" value="Edit" class="btn btn-gradient-01" />
                    </div>
                </form>
            </div>
        </div>
        <!-- End Form -->
    </div>
</div>
<!-- End Row -->
<!-- End Container -->