@model WEB.Models.ProjectModel

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Begin Page Header-->
<div class="row">
    <div class="page-header">
        <div class="d-flex align-items-center">
            <h2 class="page-header-title">Forms Validation</h2>
            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="db-default.html"><i class="ti ti-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="#">Projects</a></li>
                    <li class="breadcrumb-item active">Add project</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Header -->
<div class="row flex-row">
    <div class="col-xl-12">
        <!-- Form -->
        <div class="widget has-shadow">
            <div class="widget-header bordered no-actions d-flex align-items-center">
                <h4>Default Form</h4>
            </div>
            <div class="widget-body">
                <form class="needs-validation" method="post" action="/Project/CreateProject" enctype="multipart/form-data" novalidate>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Project name *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="name" placeholder="Entrer name" required>
                            <div class="invalid-feedback">
                                Please enter a valid  name
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Project adress *</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="adress" placeholder="Entrer name" required>
                            <div class="invalid-feedback">
                                Please enter a valid  adress
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">num_ressource_all *</label>
                        <div class="col-lg-5">
                            <input type="number" class="form-control" name="num_ressource_all" placeholder="Entrer id client" required>
                            <div class="invalid-feedback">
                                Please enter a valid  num_ressource_all
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">num_ressource_levio *</label>
                        <div class="col-lg-5">
                            <input type="number" class="form-control" name="num_ressource_levio" placeholder="Entrer id client" required>
                            <div class="invalid-feedback">
                                Please enter a valid  num_ressource_levio
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">start_date *</label>
                        <div class="col-lg-5">
                            <input type="date" class="form-control" name="start_date" placeholder="Entrer id client" required>
                            <div class="invalid-feedback">
                                Please enter a valid  start_date
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">end_date *</label>
                        <div class="col-lg-5">
                            <input type="date" class="form-control" name="end_date" placeholder="Entrer id client" required>
                            <div class="invalid-feedback">
                                Please enter a valid  end_date
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Client Category *</label>
                        <div class="col-lg-5">
                            <div class="select">
                                <select name="type" class="custom-select form-control" required>
                                    <option>runningProject</option>
                                    <option>newProject</option>
                                    <option>finishedProject</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a category
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Client Category *</label>
                        <div class="col-lg-5">
                            <div class="select">
                                <select name="client_id" class="custom-select form-control" required>
                                    <option>runningProject</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a category
                                </div>
                            </div>
                        </div>
                    </div>

                    

                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-4 form-control-label d-flex justify-content-lg-end">Photo *</label>
                        <div class="col-lg-5">
                            <input type="file" class="form-control" name="ImageFile" id="ImageFile" placeholder="Photo" required>
                            <div class="invalid-feedback">
                                Please select a photo
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <input type="submit" value="Create" class="btn btn-gradient-01" />
                    </div>
                </form>
            </div>
        </div>
        <!-- End Form -->
    </div>
</div>
<!-- End Row -->
<!-- End Container -->
