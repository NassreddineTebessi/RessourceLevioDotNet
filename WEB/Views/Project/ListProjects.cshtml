@model IEnumerable<WEB.Models.ProjectModel>

@{
    ViewBag.Title = "ListProjects";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<!-- End Left Sidebar -->
<!-- Begin Content -->
<div class="content-inner compact">

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-11">
                <!-- Start Head Profile -->
                <!-- End Head Profile -->
                <div class="row flex-row">
                    @{ foreach (var p in ViewBag.result)
                        {
                            <div class="col-xl-3 col-md-4 col-sm-6 col-remove">
                                <!-- Begin Card -->
                                <div class="widget-image has-shadow">
                                    <div class="contact-card-2">
                                        <div class="cover-bg">
                                            <img src=@Url.Content("/Content/img/cover/01.jpg") class="img-fluid" alt="...">
                                        </div>
                                        <!-- Begin Widget Body -->
                                        <div class="widget-body">
                                            <div class="quick-actions hover">
                                                <div class="dropdown">
                                                    <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle">
                                                        <i class="la la-ellipsis-h"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        
                                                            <a href="@Url.Action("deleteProject","Project",new {id=p.id })">
                                                                <i class="la la-trash"></i>Delete
                                                            </a>
                                                        <a href="#" class="dropdown-item">
                                                            <i class="la la-edit"></i>Edit
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="cover-image mx-auto">
                                                <img src=@Url.Content("/Content/img/avatar/avatar-02.jpg") alt="..." class="rounded-circle mx-auto">
                                            </div>
                                            <h4 class="name"><a href="#">@p.name</a></h4>
                                            <div class="job">@p.adress</div>
                                            <div class="social-friends owl-carousel mb-3">
                                                <div class="item">
                                                    <div class="stats">
                                                        <div class="row d-flex justify-content-between">
                                                            <div class="col">
                                                                <span class="counter">264</span>
                                                                <span class="text">Friends</span>
                                                            </div>
                                                            <div class="col">
                                                                <span class="counter">52</span>
                                                                <span class="text">Photos</span>
                                                            </div>
                                                            <div class="col">
                                                                <span class="counter">997</span>
                                                                <span class="text">Videos</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="item">
                                                    <div class="quick-about">
                                                        <div class="row d-flex align-items-center">
                                                            <div class="col-12">
                                                                <h4>About</h4>
                                                                <p>
                                                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc ac orci in magna condimentum convallis.
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-center pt-5 pb-3">
                                                <a href="@Url.Action("DetailProject","Project",new {id=p.id })" class="btn btn-gradient-01">Profile</a>
                                            </div>
                                        </div>
                                        <!-- End Widget Body -->
                                    </div>
                                </div>
                                <!-- End Card -->
                            </div>
                        }
                    }

                    <!-- End Row -->
                </div>
                <!-- End Col -->
            </div>
            <!-- End Row -->
        </div>
    </div>
</div>
